                <TextView
                    android:id="@+id/title"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="구인글 제목"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contractTwo"
